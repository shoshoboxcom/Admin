<script>
// ========= –ü–ê–†–û–õ–¨ =========
// –°–º–µ–Ω–∏ –ø–∞—Ä–æ–ª—å –∑–¥–µ—Å—å:
const ADMIN_PASSWORD = 'admin123';

// ========= –¢–û–í–ê–†–´ =========
// –î–æ–±–∞–≤–ª—è–π —Å—é–¥–∞ —Ç–æ–≤–∞—Ä—ã:
const PRODUCTS = [
  {
    id: 'sweet',
    name: 'Sweet',
    category: 'knife',
    rarity: 'godly',
    weaponType: '',
    image: 'https://bit.ly/4aGGm5I',
    price: 1204,
    oldPrice: 1699,
  },
  // –î–æ–±–∞–≤–ª—è–π –Ω–æ–≤—ã–µ —Ç–æ–≤–∞—Ä—ã —Å—é–¥–∞ –ø–æ –æ–±—Ä–∞–∑—Ü—É –≤—ã—à–µ
];

// ========= –°–û–°–¢–û–Ø–ù–ò–ï =========
let stockData = {};
let currentFilter = 'all';
let configVisible = true;

// ========= LOGIN =========
function doLogin() {
  const val = document.getElementById('password-input').value;
  if (val === ADMIN_PASSWORD) {
    document.getElementById('login-screen').style.display = 'none';
    document.getElementById('main-panel').style.display = 'block';
    loadCfg();
    loadFromJsonBin();
  } else {
    document.getElementById('login-error').style.display = 'block';
    document.getElementById('password-input').value = '';
  }
}

function doLogout() {
  document.getElementById('login-screen').style.display = 'flex';
  document.getElementById('main-panel').style.display = 'none';
  document.getElementById('password-input').value = '';
}

// ========= CONFIG =========
function saveCfg() {
  localStorage.setItem('mm2_apikey', document.getElementById('cfg-apikey').value.trim());
  localStorage.setItem('mm2_binid', document.getElementById('cfg-binid').value.trim());
  showStatus('–ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã!', 'success');
}

function loadCfg() {
  document.getElementById('cfg-apikey').value = localStorage.getItem('mm2_apikey') || '';
  document.getElementById('cfg-binid').value = localStorage.getItem('mm2_binid') || '';
}

function getCfg() {
  return {
    apiKey: localStorage.getItem('mm2_apikey') || '',
    binId: localStorage.getItem('mm2_binid') || ''
  };
}

function toggleConfig() {
  configVisible = !configVisible;
  const section = document.getElementById('config-section');
  section.style.display = configVisible ? 'block' : 'none';
}

// ========= JSONBIN =========
async function loadFromJsonBin() {
  const { apiKey, binId } = getCfg();
  if (!apiKey || !binId) {
    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º –≤—Å—ë –∏–∑ PRODUCTS
    PRODUCTS.forEach(p => { if (stockData[p.id] === undefined) stockData[p.id] = p.inStock !== false; });
    renderProducts();
    updateStats();
    return;
  }

  showStatus('–ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö...', 'loading');
  try {
    const res = await fetch(`https://api.jsonbin.io/v3/b/${binId}/latest`, {
      headers: { 'X-Master-Key': apiKey }
    });
    if (!res.ok) throw new Error('–û—à–∏–±–∫–∞ ' + res.status);
    const data = await res.json();
    stockData = data.record || {};
    // –î–ª—è –Ω–æ–≤—ã—Ö —Ç–æ–≤–∞—Ä–æ–≤ –∫–æ—Ç–æ—Ä—ã—Ö –Ω–µ—Ç –≤ bin ‚Äî —Å—Ç–∞–≤–∏–º true
    PRODUCTS.forEach(p => { if (stockData[p.id] === undefined) stockData[p.id] = true; });
    showStatus('–î–∞–Ω–Ω—ã–µ –∑–∞–≥—Ä—É–∂–µ–Ω—ã ‚úì', 'success');
  } catch (e) {
    PRODUCTS.forEach(p => { if (stockData[p.id] === undefined) stockData[p.id] = true; });
    showStatus('–ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å: ' + e.message, 'error');
  }
  renderProducts();
  updateStats();
}

async function saveToJsonBin() {
  const { apiKey, binId } = getCfg();
  if (!apiKey || !binId) {
    showStatus('–£–∫–∞–∂–∏ API Key –∏ Bin ID –≤ –Ω–∞—Å—Ç—Ä–æ–π–∫–∞—Ö!', 'error');
    return;
  }

  const btn = document.getElementById('save-btn');
  btn.disabled = true;
  showStatus('–°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ...', 'loading');

  try {
    const res = await fetch(`https://api.jsonbin.io/v3/b/${binId}`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json',
        'X-Master-Key': apiKey
      },
      body: JSON.stringify(stockData)
    });
    if (!res.ok) throw new Error('–û—à–∏–±–∫–∞ ' + res.status);
    showStatus('–°–æ—Ö—Ä–∞–Ω–µ–Ω–æ! –ú–∞–≥–∞–∑–∏–Ω –æ–±–Ω–æ–≤–ª—ë–Ω ‚úì', 'success');
  } catch (e) {
    showStatus('–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è: ' + e.message, 'error');
  }
  btn.disabled = false;
}

async function testConnection() {
  const { apiKey, binId } = getCfg();
  if (!apiKey || !binId) { showStatus('–°–Ω–∞—á–∞–ª–∞ –≤–≤–µ–¥–∏ API Key –∏ Bin ID!', 'error'); return; }
  showStatus('–ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è...', 'loading');
  try {
    const res = await fetch(`https://api.jsonbin.io/v3/b/${binId}/latest`, {
      headers: { 'X-Master-Key': apiKey }
    });
    if (!res.ok) throw new Error('–ö–æ–¥ ' + res.status + ' ‚Äî –ø—Ä–æ–≤–µ—Ä—å –∫–ª—é—á –∏ ID');
    showStatus('–ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ —É—Å–ø–µ—à–Ω–æ ‚úì', 'success');
  } catch (e) {
    showStatus('–û—à–∏–±–∫–∞: ' + e.message, 'error');
  }
}

// ========= UI =========
function showStatus(msg, type) {
  const el = document.getElementById('status-msg');
  el.textContent = msg;
  el.className = 'status-msg show ' + type;
  if (type === 'success') setTimeout(() => el.classList.remove('show'), 3000);
}

function setFilter(f) {
  currentFilter = f;
  ['all','in','out'].forEach(x => {
    document.getElementById('filter-' + x).classList.toggle('active', x === f);
  });
  renderProducts();
}

function bulkSet(val) {
  const search = document.getElementById('admin-search').value.toLowerCase();
  PRODUCTS.forEach(p => {
    if (!search || p.name.toLowerCase().includes(search)) {
      stockData[p.id] = val;
    }
  });
  renderProducts();
  updateStats();
}

function toggle(id) {
  stockData[id] = !stockData[id];
  updateStats();
  // –û–±–Ω–æ–≤–ª—è–µ–º –∫–∞—Ä—Ç–æ—á–∫—É –±–µ–∑ –ø–µ—Ä–µ—Ä–∏—Å–æ–≤–∫–∏ –≤—Å–µ–≥–æ
  const card = document.querySelector(`[data-id="${id}"]`);
  if (card) {
    const inStock = stockData[id];
    card.classList.toggle('out', !inStock);
    const inp = card.querySelector('input[type=checkbox]');
    if (inp) inp.checked = inStock;
    const lbl = card.querySelector('.toggle-label');
    if (lbl) { lbl.textContent = inStock ? '–í –ù–ê–õ–ò–ß–ò–ò' : '–ù–ï–¢'; lbl.className = 'toggle-label ' + (inStock ? 'in' : 'out'); }
  }
}

function updateStats() {
  const total = PRODUCTS.length;
  const inCount = PRODUCTS.filter(p => stockData[p.id]).length;
  document.getElementById('stat-total').textContent = total;
  document.getElementById('stat-in').textContent = inCount;
  document.getElementById('stat-out').textContent = total - inCount;
}

function renderProducts() {
  const search = document.getElementById('admin-search').value.toLowerCase();
  const grid = document.getElementById('admin-product-grid');

  const filtered = PRODUCTS.filter(p => {
    const matchSearch = p.name.toLowerCase().includes(search);
    const inStock = stockData[p.id];
    const matchFilter = currentFilter === 'all' || (currentFilter === 'in' && inStock) || (currentFilter === 'out' && !inStock);
    return matchSearch && matchFilter;
  });

  grid.innerHTML = filtered.map(p => {
    const inStock = stockData[p.id] !== false;
    return `
      <div class="product-card ${inStock ? '' : 'out'}" data-id="${p.id}">
        <img class="product-img" src="${p.image}" alt="${p.name}" loading="lazy" onerror="this.style.opacity=0.3">
        <div class="product-info">
          <div class="product-name-txt">${p.name}</div>
          <div class="product-meta">
            <span class="badge badge-rarity-${p.rarity}">${p.rarity.toUpperCase()}</span>
            <span class="badge badge-cat">${p.category.toUpperCase()}</span>
            ${p.weaponType === 'chroma' ? '<span class="badge badge-chroma">CHROMA</span>' : ''}
          </div>
        </div>
        <div class="toggle-wrap">
          <label class="toggle">
            <input type="checkbox" ${inStock ? 'checked' : ''} onchange="toggle('${p.id}')">
            <span class="slider"></span>
          </label>
          <span class="toggle-label ${inStock ? 'in' : 'out'}">${inStock ? '–í –ù–ê–õ–ò–ß–ò–ò' : '–ù–ï–¢'}</span>
        </div>
      </div>
    `;
  }).join('');
}

// –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
setFilter('all');
</script>
</body>
</html>
